<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/signup">





        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"

        android:id="@+id/showemail"
            android:textSize="14sp"
            android:layout_marginTop="25dp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:layout_below="@+id/last"
            android:layout_alignLeft="@+id/last"
            android:layout_alignStart="@+id/last" />

            <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/address"
                android:textSize="14sp"
                android:layout_marginTop="26dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:layout_below="@+id/contact"
                android:layout_alignLeft="@+id/contact"
                android:layout_alignStart="@+id/contact" />

            <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"

        android:id="@+id/password"
                android:layout_marginTop="25dp"
                android:textSize="14sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:layout_below="@+id/showemail"
                android:layout_alignLeft="@+id/showemail"
                android:layout_alignStart="@+id/showemail" />

        <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"

    android:id="@+id/contact"
            android:layout_marginTop="27dp"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:layout_below="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:layout_alignStart="@+id/password" />

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"

    android:id="@+id/last"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="0dp"
        android:textSize="14sp"

            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:layout_below="@+id/first"
            android:layout_alignLeft="@+id/first"
            android:layout_alignStart="@+id/first"/>

        <EditText
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"

    android:id="@+id/first"
            android:layout_marginTop="163dp"
            android:layout_marginLeft="130dp"
            android:layout_width="270dp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dip"
        android:layout_height="28dip"
        app:srcCompat="@drawable/buttonsignup"
        android:id="@+id/bsignup"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/address"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp" />


</RelativeLayout>

